<%- include("../includes/head", { title: "New product page"}) %> 
<!-- <link rel="stylesheet" href="/styles/products.css"> -->
<link rel="stylesheet" href="/styles/auth.css" />
<script src="/scripts/image-preview.js" defer></script>
</head>
  <body>
    <%- include("../includes/header") %>
    <main>
        <form action="/admin/update/<%= product.id %>?_csrf=<%= locals.csrfToken %>" method="post" class="auth" enctype="multipart/form-data">
          <h2>Update robot</h2>
          <hr>
          <ul>
            <li>
              <label for="name">Name</label>
              <input type="text" name="name" id="name" value="<%= product.name %>" required>
            </li>
            <li>
              <label for="price">Price</label>
              <input type="number" id="price" name="price" min="1" step="1" value="<%= product.price %>" required>
            </li>
            <li id="image-preview">
              <div>
                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/*">
              </div>
              <img src="" alt="Uploaded image">
            </li>
            <li>
              <label for="description">Description</label>
              <textarea name="description" id="description" rows="7" maxlength="250" required><%= product.description %></textarea>
            </li>
            <li>
              <div>
                <button type="reset" class="confirm-btn another-btn">Reset</button>
                <button class="confirm-btn">Add</button>
              </div>
            </li>
          </ul>  
        </form>
    </main>
  </body> 
</html>
