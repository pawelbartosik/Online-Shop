<img src="<%= product.imageUrl %>" alt="<%= product.name %>" />
<div>
  <h2><%= product.name %></h2>
  <% if (locals.isAdmin) { %>
  <form action="/admin/delete/<%= product.id %>" method="post">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
    <button
      class="confirm-btn delete-btn"
      data-productid="<%= product.id %>"
      id="delete-btn"
    >
      Delete
    </button>
  </form>
  <form action="/admin/update/<%= product.id %>" method="get">
    <button class="confirm-btn another-btn">Edit</button>
  </form>
  <% } %>
  <form action="/detail/<%= product.id %>" method="get">
    <button class="confirm-btn another-btn">Detail</button>
  </form>
</div>
